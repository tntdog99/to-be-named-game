prefix=/usr/local/lua-batteries
includedir=${prefix}/include
libdir=${prefix}/lib

Name: lua-sdl2
Description: Lua-SDL2 is a pure C binding of SDL 2.0 for Lua 5.1, JIT, 5.2, and 5.3
URL: https://github.com/Tangent128/luasdl2
Version: 2.0.5
Requires: luajit, sdl2, SDL2_image, SDL2_mixer, SDL2_net, SDL2_ttf
Libs: -L${prefix}/lib/lua/5.1-static -llua.SDL -llua.SDL.image -llua.SDL.mixer -llua.SDL.net -llua.SDL.ttf -lm -ldl
Cflags: -I${includedir}
