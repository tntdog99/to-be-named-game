prefix=/usr/local/lua-batteries
includedir=${prefix}/include
libdir=${prefix}/lib

Name: luv
Description: Bare libuv bindings for lua
URL: https://github.com/luvit/luv
Version: 1.44.2
Requires: lua54, libuv
Libs: -L${prefix}/lib/lua/5.4-static -llua.luv -lm -ldl -lreadline -pthread -lrt
Cflags: -I${includedir} -pthread
